    "firebase-functions": "^4.6.0",
    "stripe": "^14.25.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-google": "^0.14.0",
    "typescript": "^5.4.0"
  },
  "private": true
}
